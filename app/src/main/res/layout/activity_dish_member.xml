<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tku.goldas.projectfh.DishMenber"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff87a40">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_back2"
            android:id="@+id/btn_back"
            android:layout_weight="44"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="成員選取"
            android:id="@+id/textView9"
            android:layout_weight="680"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:textSize="26dp"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_true2"
            android:id="@+id/btn_true"
            android:layout_weight="44"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffc798">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成員"
                android:textSize="22dp"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:layout_marginLeft="10dp"
                android:textSize="22dp"
                android:background="#ffffff"
                android:editable="false"
                android:enabled="false"
                android:textColor="#000000"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="尚未選取成員"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffe6cd">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="總共選取"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:background="#ffffff"
                android:editable="false"
                android:enabled="false"
                android:textColor="#000000"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="#000000" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="選取"
                android:textSize="16dp"
                android:id="@+id/btn_choose" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除"
                android:textSize="16dp"
                android:id="@+id/btn_clearall" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffefe8">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/listView2"
            android:background="#ffefe8" />
    </RelativeLayout>

</LinearLayout>
