<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff87a40">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_back2"
            android:id="@+id/btn_back"
            android:layout_weight="44"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="食材選取"
            android:layout_weight="680"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:textSize="26dp"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_true2"
            android:id="@+id/btn_true"
            android:layout_weight="44"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffc798">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查詢食材名稱"
                android:textSize="22dp"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_item"
                android:layout_marginLeft="10dp"
                android:textSize="22dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查詢"
                android:textSize="16dp"
                android:id="@+id/btn_search" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffe6cd">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="種類："
                android:textSize="22dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:layout_marginLeft="10dp" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:entries="@array/type"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="OK"
                android:id="@+id/btn_ok" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffe7e4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已選取食材"
                android:textSize="22dp"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_choose"
                android:layout_marginLeft="10dp"
                android:textSize="22dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:enabled="false"/>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffefe8">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/listView3"
            android:background="#ffefe8" />
    </RelativeLayout>

</LinearLayout>
